.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}

.weather-wrapper .location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5);
  border: none;
  padding: 0;
}

.weather-wrapper .location-wrapper .location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.weather-wrapper .location-wrapper .location .location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.weather-wrapper .location-wrapper .location .location-text{
  opacity: 0.5;
}

.weather-wrapper .location-wrapper .location-tips{
  margin-top: 10rpx;
  text-align: center;
  height: 42rpx;
  opacity: 0.5;
}

.weather-wrapper .temp{
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather-wrapper .weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-wrapper .weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.weather-wrapper .day-weather{
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.weather-wrapper .day-weather .temp-text{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.weather-wrapper .day-weather .arrow-icon{
  width: 13rpx;
  height: 24rpx;
}

.timetips{
  display: flex;
  justify-content: center;
  align-items: center;  
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timetips .timetips-icon{
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
.timetips .timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  font-weight: bold;
}

.forecast-list{
  display: flex;
}

.forecast-list .forecast-item{
  display: flex;
  flex-direction:column;  
  flex-shrink: 0;
  width: 120rpx;
  align-items: center;
}

.forecast-list .forecast-item .forecast-time{
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-list .forecast-item .forecast-weather{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-list .forecast-item .forecast-temp{
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}

